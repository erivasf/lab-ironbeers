<div class="random-beer">
  {{#with beer}}
  <div class="image-box"><img src="{{image_url}}"></div>
  <div class="text-box">
    <h5>{{name}}</h5>
    <p class="text-secondary"><small>{{tagline}}</small></p>
    <p class="card-text">{{description}}
    </p>
    <h6><b>FOOD PAIRING</b></h6>
    <ul>
      {{#each food_pairing}}
      <li>{{this}}</li>
      {{/each}}
    </ul>
    <p><b>Brewer tips: </b>
      {{brewers_tips}}</p>
  </div>
  {{/with}}
</div>